rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 개발 환경에서는 모든 사용자가 모든 문서에 접근할 수 있도록 허용
    match /{document=**} {
      allow read, write: if true;
    }
    
    // 팀 컬렉션에 대한 규칙
    match /teams/{teamId} {
      allow read, write: if true;
      
      // 파트 하위 컬렉션에 대한 규칙
      match /parts/{partId} {
        allow read, write: if true;
      }
    }
    
    // 평가 관련 컬렉션에 대한 규칙
    match /evaluations/{evaluationId} {
      allow read, write: if true;
    }
    
    match /evaluation_templates/{templateId} {
      allow read, write: if true;
    }
    
    // 사용자 컬렉션에 대한 규칙
    match /users/{userId} {
      allow read, write: if true;
    }
  }
}